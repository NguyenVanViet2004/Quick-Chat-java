<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:background="@drawable/item_layout_home"
    android:elevation="@dimen/_10sdp"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chú thích :"
        android:textSize="@dimen/_13ssp"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Ngày 1"
                android:textSize="@dimen/_13sdp"
                app:drawableLeftCompat="@drawable/icon_square"
                app:drawableTint="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Ngày 2"
                android:textSize="@dimen/_13sdp"
                app:drawableLeftCompat="@drawable/icon_square"
                app:drawableTint="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Ngày 3"
                android:textSize="@dimen/_13sdp"
                app:drawableLeftCompat="@drawable/icon_square"
                app:drawableTint="@color/green" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Ngày 4"
                android:textSize="@dimen/_13sdp"
                app:drawableLeftCompat="@drawable/icon_square"
                app:drawableTint="#FFFF00" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Ngày 5"
                android:textSize="@dimen/_13sdp"
                app:drawableLeftCompat="@drawable/icon_square"
                app:drawableTint="#FF00FF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:drawablePadding="@dimen/_10sdp"
                android:paddingHorizontal="@dimen/_10sdp"
                android:text="Ngày 6"
                android:textSize="@dimen/_13sdp"
                app:drawableLeftCompat="@drawable/icon_square"
                app:drawableTint="#00FFFF" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:drawablePadding="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:text="Ngày 7"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/_13sdp"
        app:drawableLeftCompat="@drawable/icon_square"
        app:drawableTint="#808080" />


</LinearLayout>