<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/botttom_dialog"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/_70sdp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_round_remove_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/createText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="2"
            android:padding="@dimen/_6sdp"
            android:text="@string/danh_sach_font_chu"
            android:textAlignment="viewStart"
            android:textColor="@color/lavender"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/_5sdp"
            android:layout_weight="0"
            android:src="@drawable/ic_baseline_clear_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp">

        <com.example.pro1121_gr.custom_textview.BlackjackTextview
            android:id="@+id/blackjack"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Blackjack"
            android:background="@drawable/onclickitem"
            android:textSize="@dimen/_17ssp" />

        <com.example.pro1121_gr.custom_textview.AlluraTextView
            android:id="@+id/allura"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Allura"
            android:background="@drawable/onclickitem"
            android:textSize="@dimen/_17ssp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <com.example.pro1121_gr.custom_textview.RobotoBoldTextView
            android:id="@+id/robotoBold"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roboto bold"
            android:background="@drawable/onclickitem"
            android:textSize="@dimen/_17ssp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <com.example.pro1121_gr.custom_textview.RobotoItalicTextView
            android:id="@+id/robotoItalic"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roboto italic"
            android:background="@drawable/onclickitem"
            android:textSize="@dimen/_17ssp"
            android:layout_marginTop="@dimen/_10sdp"/>

        <com.example.pro1121_gr.custom_textview.RobotoLightTextView
            android:id="@+id/robotoLight"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Roboto light"
            android:background="@drawable/onclickitem"
            android:textSize="@dimen/_17ssp"
            android:layout_marginTop="@dimen/_10sdp"/>
    </LinearLayout>


</LinearLayout>